{
    "compilerOptions": {
        "target": "ES2020",
        "module": "None",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "outDir": "./js",
        "rootDir": "./ts",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": false,
        "isolatedModules": false
    },
    "include": [
        "ts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}